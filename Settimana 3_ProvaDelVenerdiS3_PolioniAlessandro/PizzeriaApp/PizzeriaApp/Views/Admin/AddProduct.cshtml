<h2 class="mb-4">Aggiungi Nuovo Prodotto</h2>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data" class="container">
    <div class="form-group mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" id="Nome" name="Nome" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="Foto" class="form-label">Foto</label>
        <input type="file" id="Foto" name="Foto" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="Prezzo" class="form-label">Prezzo</label>
        <input type="number" id="Prezzo" name="Prezzo" class="form-control" required step="0.01" />
    </div>

    <div class="form-group mb-3">
        <label for="TempoConsegna" class="form-label">Tempo di Consegna (min)</label>
        <input type="number" id="TempoConsegna" name="TempoConsegna" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label for="Ingredienti" class="form-label">Ingredienti</label>
        <textarea id="Ingredienti" name="Ingredienti" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi Prodotto</button>
</form>
