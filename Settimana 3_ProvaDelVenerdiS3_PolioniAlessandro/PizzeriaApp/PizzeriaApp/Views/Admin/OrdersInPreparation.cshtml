@model IEnumerable<PizzeriaApp.Models.Order>

<h1>Ordini in Preparazione</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID Ordine</th>
            <th>Data Ordine</th>
            <th>Indirizzo di Spedizione</th>
            <th>Note</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.IndirizzoSpedizione</td>
                <td>@order.Note</td>
                <td>
                    <form asp-action="MarkOrderAsCompleted" method="post" asp-route-orderId="@order.Id">
                        <button type="submit" class="btn btn-success">Segna come Completato</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
