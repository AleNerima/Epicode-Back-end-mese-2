@model PizzeriaApp.Models.CreateOrderViewModel

<h2>Crea Ordine</h2>

<form asp-action="CreateOrder" method="post">
    <div class="form-group">
        <label for="IndirizzoSpedizione">Indirizzo di Spedizione</label>
        <input id="IndirizzoSpedizione" name="indirizzoSpedizione" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Note">Note</label>
        <textarea id="Note" name="note" class="form-control"></textarea>
    </div>

    <h3>Seleziona Prodotti e Quantità</h3>
    <div class="form-group">
        @if (Model.Products != null && Model.Products.Any())
        {
            for (var i = 0; i < Model.Products.Count; i++)
            {
                <div>
                    <label>@Model.Products[i].Nome</label>
                    <input type="hidden" name="productIds[@i]" value="@Model.Products[i].Id" />
                    <input type="number" name="quantities[@i]" min="1" max="100" class="form-control" placeholder="Quantità" />
                </div>
            }
        }
        else
        {
            <p>Nessun prodotto disponibile.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Procedi</button>
</form>
