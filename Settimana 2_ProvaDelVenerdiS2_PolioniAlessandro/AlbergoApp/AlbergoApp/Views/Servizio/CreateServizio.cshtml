@model AlbergoApp.Models.Servizio

@{
    ViewData["Title"] = "Crea Nuovo Servizio";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="NomeServizio" class="control-label"></label>
        <input asp-for="NomeServizio" class="form-control" />
        <span asp-validation-for="NomeServizio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo" class="control-label"></label>
        <input asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salva" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </div>
</form>
