@model AlbergoApp.Models.Servizio

@{
    ViewData["Title"] = "Dettagli Servizio";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Model.NomeServizio</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome Servizio</dt>
        <dd class="col-sm-10">@Model.NomeServizio</dd>
        <dt class="col-sm-2">Prezzo</dt>
        <dd class="col-sm-10">@Model.Prezzo.ToString("C")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdServizio" class="btn btn-warning">Modifica</a>
    <a asp-action="Index" class="btn btn-secondary">Indietro</a>
</div>
