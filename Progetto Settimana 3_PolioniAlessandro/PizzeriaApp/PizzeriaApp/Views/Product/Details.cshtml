@model PizzeriaApp.Models.Prodotto

<h2>Product Details</h2>

<div>
    <h3>@Model.Nome</h3>
    <div>
        <strong>Price:</strong> @Model.Prezzo.ToString("C")
    </div>
    <div>
        <strong>Delivery Time:</strong> @Model.TempoConsegna minutes
    </div>
    <div>
        <strong>Ingredients:</strong> @Model.Ingredienti
    </div>
    <div>
        @if (!string.IsNullOrEmpty(Model.FotoBase64))
        {
            <img src="data:image/jpeg;base64,@Model.FotoBase64" alt="@Model.Nome" style="max-width: 300px; max-height: 300px;" />
        }
    </div>
    <div>
        <a href="@Url.Action("Edit", "Product", new { id = Model.ProdottoId })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
