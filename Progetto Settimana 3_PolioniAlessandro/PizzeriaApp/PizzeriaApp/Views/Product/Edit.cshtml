@model PizzeriaApp.Models.Prodotto

<h2>Edit Product</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProdottoId" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prezzo" class="control-label"></label>
        <input asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoConsegna" class="control-label"></label>
        <input asp-for="TempoConsegna" class="form-control" />
        <span asp-validation-for="TempoConsegna" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FotoBase64" class="control-label"></label>
        <input type="file" name="foto" />
        <span asp-validation-for="FotoBase64" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ingredienti" class="control-label"></label>
        <textarea asp-for="Ingredienti" class="form-control"></textarea>
        <span asp-validation-for="Ingredienti" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
