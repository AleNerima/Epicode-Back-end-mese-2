@model PizzeriaApp.Models.Prodotto

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProdottoId" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Prezzo"></label>
        <input asp-for="Prezzo" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="TempoConsegna"></label>
        <input asp-for="TempoConsegna" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Ingredienti"></label>
        <textarea asp-for="Ingredienti" class="form-control" disabled></textarea>
    </div>
    <p>Are you sure you want to delete this product?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
</form>
