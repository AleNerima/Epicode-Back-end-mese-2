@model IEnumerable<PizzeriaApp.Models.Ordine>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Email</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrdineId</td>
                <td>@order.DettagliOrdine.Sum(d => d.Prodotto.Prezzo * d.Quantita)</td>
                <td>@(order.Evaso ? "Completed" : "Pending")</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.OrdineId })" class="btn btn-info">Details</a>
                    @if (!order.Evaso)
                    {
                        <form asp-action="MarkAsCompleted" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.OrdineId" />
                            <button type="submit" class="btn btn-success">Mark as Completed</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
