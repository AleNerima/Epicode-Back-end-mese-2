@model IEnumerable<AlbergoApp.Models.Dipendente>

@{
    ViewData["Title"] = "Elenco Dipendenti";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Ruolo</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dipendente in Model)
        {
            <tr>
                <td>@dipendente.Nome</td>
                <td>@dipendente.Cognome</td>
                <td>@dipendente.Ruolo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@dipendente.IdDipendente">Dettagli</a> |
                    <a asp-action="Edit" asp-route-id="@dipendente.IdDipendente">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@dipendente.IdDipendente">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Crea Nuovo Dipendente</a>
</p>
