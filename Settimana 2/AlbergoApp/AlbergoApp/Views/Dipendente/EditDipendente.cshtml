@model AlbergoApp.Models.Dipendente

@{
    ViewData["Title"] = "Modifica Dipendente";
}

<h1>@ViewData["Title"]</h1>

<h4>Dipendente</h4>
<hr />
<form asp-action="Edit">
    <input type="hidden" asp-for="IdDipendente" />
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash" class="control-label"></label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cognome" class="control-label"></label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ruolo" class="control-label"></label>
        <select asp-for="Ruolo" class="form-control">
            <option value="">-- Seleziona Ruolo --</option>
            <option value="Admin">Admin</option>
            <option value="User">User</option>
        </select>
        <span asp-validation-for="Ruolo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salva" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index">Indietro</a>
</p>
