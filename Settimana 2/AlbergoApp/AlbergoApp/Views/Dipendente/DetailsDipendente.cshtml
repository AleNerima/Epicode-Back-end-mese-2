@model AlbergoApp.Models.Dipendente

@{
    ViewData["Title"] = "Dettagli Dipendente";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Dipendente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Nome
        </dt>
        <dd class="col-sm-9">
            @Model.Nome
        </dd>
        <dt class="col-sm-3">
            Cognome
        </dt>
        <dd class="col-sm-9">
            @Model.Cognome
        </dd>
        <dt class="col-sm-3">
            Ruolo
        </dt>
        <dd class="col-sm-9">
            @Model.Ruolo
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.IdDipendente">Modifica</a> |
    <a asp-action="Index">Indietro</a>
</p>
