@model IEnumerable<AlbergoApp.Models.Cliente>

@{
    ViewData["Title"] = "Elenco Clienti";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Cliente.css" />
</head>
<body>
    <div class="list-clienti-container">
        <h1>@ViewData["Title"]</h1>
        <p>
            <a href="@Url.Action("Create", "Cliente")" class="create-cliente-link">Crea Nuovo Cliente</a>
        </p>
        <table class="list-clienti-table">
            <thead>
                <tr>
                    <th>Codice Fiscale</th>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.CodiceFiscale</td>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Cognome</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Telefono</td>
                        <td>
                            <a href="@Url.Action("Details", "Cliente", new { id = cliente.IdCliente })">Dettagli</a> 
                            <a href="@Url.Action("Edit", "Cliente", new { id = cliente.IdCliente })">Modifica</a> 
                            <a href="@Url.Action("Delete", "Cliente", new { id = cliente.IdCliente })">Elimina</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
