@model DittaSpedizioni.Models.Spedizione

<h1>Elimina Spedizione</h1>

<h3>Sei sicuro di voler eliminare questa spedizione?</h3>
<div>
    <h4>Dettagli Spedizione:</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IdSpedizione</dd>

        <dt class="col-sm-2">Numero Identificativo</dt>
        <dd class="col-sm-10">@Model.NumeroIdentificativo</dd>

        <dt class="col-sm-2">Data Spedizione</dt>
        <dd class="col-sm-10">@Model.DataSpedizione.ToShortDateString()</dd>

        <dt class="col-sm-2">Peso</dt>
        <dd class="col-sm-10">@Model.Peso</dd>

        <dt class="col-sm-2">Città Destinataria</dt>
        <dd class="col-sm-10">@Model.CittaDestinataria</dd>

        <dt class="col-sm-2">Indirizzo Destinatario</dt>
        <dd class="col-sm-10">@Model.IndirizzoDestinatario</dd>

        <dt class="col-sm-2">Nominativo Destinatario</dt>
        <dd class="col-sm-10">@Model.NominativoDestinatario</dd>

        <dt class="col-sm-2">Costo</dt>
        <dd class="col-sm-10">@Model.Costo</dd>

        <dt class="col-sm-2">Data Consegna Prevista</dt>
        <dd class="col-sm-10">@Model.DataConsegnaPrevista.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdSpedizione" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Elimina</button>
            <a asp-action="Index" class="btn btn-secondary">Annulla</a>
        </div>
    </form>
</div>
