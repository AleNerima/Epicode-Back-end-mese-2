@model IEnumerable<DittaSpedizioni.Models.Cliente>

@{
    ViewData["Title"] = "Elenco Clienti";
}

<h1>Elenco Clienti</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuovo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Codice Fiscale / Partita IVA</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Tipo</td>
                <td>@(cliente.Tipo == "Privato" ? cliente.CodiceFiscale : cliente.PartitaIVA)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cliente.IdCliente">Dettagli</a> |
                    <a asp-action="Edit" asp-route-id="@cliente.IdCliente">Modifica</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.IdCliente">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
