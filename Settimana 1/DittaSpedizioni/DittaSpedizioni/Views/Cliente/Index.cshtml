@model IEnumerable<DittaSpedizioni.Models.Cliente>

@{
    ViewData["Title"] = "Elenco Clienti";
}

<h1>Elenco Clienti</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuovo Cliente</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Tipo</th>
                <th scope="col">Codice Fiscale / Partita IVA</th>
                <th scope="col">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Tipo</td>
                    <td>@(cliente.Tipo == "Privato" ? cliente.CodiceFiscale : cliente.PartitaIVA)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@cliente.IdCliente" class="btn btn-info btn-sm">Dettagli</a>
                        <a asp-action="Edit" asp-route-id="@cliente.IdCliente" class="btn btn-primary btn-sm">Modifica</a>
                        <a asp-action="Delete" asp-route-id="@cliente.IdCliente" class="btn btn-danger btn-sm">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
