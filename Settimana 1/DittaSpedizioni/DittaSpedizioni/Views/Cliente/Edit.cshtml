@model DittaSpedizioni.Models.Cliente

<h2>Edit Cliente</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdCliente" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipo" class="control-label">Tipo</label>
        <select asp-for="Tipo" class="form-control" id="Tipo">
            <option value="Privato">Privato</option>
            <option value="Azienda">Azienda</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="form-group" id="divCodiceFiscale">
        <label asp-for="CodiceFiscale" class="control-label">Codice Fiscale</label>
        <input asp-for="CodiceFiscale" class="form-control" />
        <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
    </div>
    <div class="form-group" id="divPartitaIVA">
        <label asp-for="PartitaIVA" class="control-label">Partita IVA</label>
        <input asp-for="PartitaIVA" class="form-control" />
        <span asp-validation-for="PartitaIVA" class="text-danger"></span>
    </div>
   

    <div class="form-group mt-3">
        <input type="submit" value="Salva Modifiche" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Torna alla lista</a>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Imposta lo stato iniziale dei campi in base al tipo di cliente
            updateFieldsVisibility();

            $('#Tipo').change(function () {
                updateFieldsVisibility();
            });

            function updateFieldsVisibility() {
                var tipoCliente = $('#Tipo').val();
                if (tipoCliente === 'Privato') {
                    $('#divCodiceFiscale').show();
                    $('#divPartitaIVA').hide();
                } else if (tipoCliente === 'Azienda') {
                    $('#divCodiceFiscale').hide();
                    $('#divPartitaIVA').show();
                }
            }
        });
    </script>
}
