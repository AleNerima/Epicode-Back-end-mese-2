@model IEnumerable<PoliziaMunicipaleApp.Models.TrasgressorePuntiTotali>

@{
    ViewData["Title"] = "Totale Punti Decurtati per Trasgressore";
}

<h1>@ViewData["Title"]</h1>

@if (Model == null || !Model.Any())
{
    <p>Nessun dato disponibile.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID Trasgressore</th>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Totale Punti Decurtati</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Idanagrafica</td>
                    <td>@item.Cognome</td>
                    <td>@item.Nome</td>
                    <td>@item.TotalePunti</td>
                </tr>
            }
        </tbody>
    </table>
}
