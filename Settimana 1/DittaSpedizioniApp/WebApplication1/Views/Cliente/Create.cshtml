@model DittaSpedizioniApp.Models.Cliente

@{
    ViewData["Title"] = "Aggiungi Nuovo Cliente";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <select id="tipoCliente" asp-for="Tipo" class="form-control">
            <option value="Privato">Privato</option>
            <option value="Azienda">Azienda</option>
        </select>
    </div>
    <div class="form-group" id="codiceFiscaleGroup" style="display:none;">
        <label asp-for="CodiceFiscale"></label>
        <input asp-for="CodiceFiscale" class="form-control" />
        <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
    </div>
    <div class="form-group" id="partitaIVAGroup" style="display:none;">
        <label asp-for="PartitaIVA"></label>
        <input asp-for="PartitaIVA" class="form-control" />
        <span asp-validation-for="PartitaIVA" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tipoCliente').change(function () {
                var tipo = $(this).val();
                if (tipo === 'Privato') {
                    $('#codiceFiscaleGroup').show();
                    $('#partitaIVAGroup').hide();
                } else if (tipo === 'Azienda') {
                    $('#codiceFiscaleGroup').hide();
                    $('#partitaIVAGroup').show();
                }
            }).trigger('change');
        });
    </script>
}
