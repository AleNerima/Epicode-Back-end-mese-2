@model List<DittaSpedizioniApp.Models.Cliente>

@{
    ViewData["Title"] = "Elenco Clienti";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuovo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CodiceFiscale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PartitaIVA)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodiceFiscale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartitaIVA)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdCliente">Dettagli</a> |
                    <a asp-action="Edit" asp-route-id="@item.IdCliente">Modifica</a> |
                    <form asp-action="Delete" asp-route-id="@item.IdCliente" method="post" onsubmit="return confirm('Sei sicuro di voler eliminare questo cliente?');">
                        <button type="submit" class="btn btn-link">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
